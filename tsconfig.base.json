{
  "extends": "./node_modules/@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    /* Enable constraints that allow a TypeScript project to be used with project references. */
    "composite": true,
    /* Enable incremental compilation */
    "incremental": true,
    /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "target": "es2022",
    /* Specify what module code is generated. */
    "module": "Node16",
    /* Generate .d.ts files from TypeScript and JavaScript files in your project. */
    "declaration": true,
    /* Generate source maps for d.ts files. */
    "declarationMap": false,
    /* Create source map files for emitted JavaScript files. */
    "sourceMap": true,
    /* Enable all strict type-checking options. */
    "strict": true,
    /* Skip type checking all .d.ts files. */
    "skipLibCheck": true,
    /* Do not emit anything if there's compilation error. */
    "noEmitOnError": true,
    /* Limit which packages are going to be included without referencing in source files. */
    "types": ["node"],
    /* Disable module elision mechanism. This bans ESM syntax in CJS. */
    "verbatimModuleSyntax": false
  }
}